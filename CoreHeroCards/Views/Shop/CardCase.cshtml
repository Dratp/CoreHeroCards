@model List<HeroActionCard>
@{
    ViewData["Title"] = "CardCase";
}

<h1>CardCase</h1>

<form action="/Shop/BuyCards">
    <input type="hidden" name="playerID" value="@ViewBag.PlayerID" />
    @for(int i = 0; i< Model.Count; i++)
    {
        @*This needs to change into an actual view of the card! or buy a pack model or purchasing*@
        <input type="checkbox" name="X" value="@Model[i].card_id"/>
        <p>Card name: @Model[i].CardName : User @Model[i].ActionText @Model[i].Target</p>
        <br />
    }
    <input type="submit" value="Buy Cards!"/>
</form>
